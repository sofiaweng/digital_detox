---
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import tailwind from "../tailwind.css";
import whiteLogo from '../assets/images/white_logo.png';
---


<header>
    <Header></Header>
</header>

<form action="#" method="post" class="max-w-2xl mx-auto p-8 mt-10 mb-10 border-2 border-customPink shadow-md space-y-6 mb-12 bg-customBlue text-customGray">
    <section id="kob-nu" class="mb-6">
        <div class="mt-8 flex items-center justify-between">
            <img src="/src/assets/images/white_logo.png" alt="Logo" class="w-[25%]">
            <h1 class="text-4xl font-semibold uppercase text-right text-customGray">Digital <br> Detox <br> 2025</h1>
        </div>
        <h2 class="font-regular text-center text-customGray mt-20">Registrér din digitale oprydning</h2>
    </section>

    <!-- Navn input -->
    <div class="mb-4">
        <input type="text" id="navn" name="navn" placeholder="Dit navn"
            class="mt-1 block w-full border-customPink bg-customBlueLight text-customGray placeholder-customGray shadow-sm focus:border-customPink focus:ring focus:ring-customPink focus:ring-opacity-50 p-3" required>
    </div>

    <!-- E-mail input -->
    <div class="mb-4">
        <input type="email" id="email" name="email" placeholder="Din e-mail"
            class="mt-1 block w-full border-customPink bg-customBlueLight text-customGray placeholder-customGray shadow-sm focus:border-customPink focus:ring focus:ring-customPink focus:ring-opacity-50 p-3" required>
    </div>

    <!-- Land input -->
    <div class="mb-4">
        <select id="land" name="land" 
            class="mt-1 block w-full border-customPink bg-customBlueLight text-customGray placeholder-customGray shadow-sm focus:border-customPink focus:ring focus:ring-customPink focus:ring-opacity-50 p-3" required>
            <option value="" disabled selected style="color: #f7f7f7;">Vælg dit land</option>
            <option value="us">USA</option>
            <option value="ca">Canada</option>
            <option value="gb">Storbritannien</option>
            <option value="de">Tyskland</option>
            <option value="fr">Frankrig</option>
            <option value="it">Italien</option>
            <option value="es">Spanien</option>
            <option value="nl">Holland</option>
            <option value="au">Australien</option>
            <option value="jp">Japan</option>
            <option value="cn">Kina</option>
            <option value="in">Indien</option>
            <option value="br">Brasilien</option>
            <option value="za">Sydafrika</option>
            <option value="mx">Mexico</option>
            <option value="ru">Rusland</option>
            <option value="kr">Sydkorea</option>
            <option value="sg">Singapore</option>
            <option value="se">Sverige</option>
            <option value="dk">Danmark</option>
            <option value="no">Norge</option>
            <option value="fi">Finland</option>
            <option value="is">Island</option>
            <option value="pl">Polen</option>
            <option value="ie">Irland</option>
            <option value="ch">Schweiz</option>
            <option value="at">Østrig</option>
            <option value="be">Belgien</option>
            <option value="cz">Tjekkiet</option>
            <option value="hu">Ungarn</option>
            <option value="ro">Rumænien</option>
            <option value="bg">Bulgarien</option>
            <option value="gr">Grækenland</option>
            <option value="tr">Tyrkiet</option>
            <option value="sa">Saudi-Arabien</option>
            <option value="ae">Forenede Arabiske Emirater</option>
            <option value="il">Israel</option>
        </select>
    </div>

    <!-- Antal deltagere -->
    <div class="mb-4">
        <input type="number" id="antal" name="antal" placeholder="Antal deltagere"
            class="mt-1 block w-full border-customPink bg-customBlueLight text-customGray placeholder-customGray shadow-sm focus:border-customPink focus:ring focus:ring-customPink focus:ring-opacity-50 p-3" required>
    </div>

    <!-- Data input -->
    <div class="mb-4">
        <input type="number" id="data" name="data" placeholder="Mængde data slettet (i GB)"
            class="mt-1 block w-full border-customPink bg-customBlueLight text-customGray placeholder-customGray shadow-sm focus:border-customPink focus:ring focus:ring-customPink focus:ring-opacity-50 p-3" required>
    </div>

<!-- Nyhedsbrev checkbox1 -->
<div class="mb-4 w-full">
    <div class="flex items-center w-full">
        <input type="checkbox" id="nyhedsbrev1" name="nyhedsbrev1"
            class="h-4 w-4 text-customPink border-customGray focus:ring-customPink">
        <label for="nyhedsbrev1" class="ml-2 text-sm text-white relative inline-block w-full">
            * Jeg er enig med 
            <a href="https://www.digitalcleanupday.org/terms-conditions" target="_blank" class="text-customPink">Terms & Conditions</a>
            <span class="absolute left-0 bottom-0 w-full" style="height: 1px; background-color: #E7639B; box-sizing: border-box;"></span>
        </label>
    </div>
</div>

<!-- Nyhedsbrev checkbox2 -->
<div class="mb-14 w-full"> <!-- Afstand mellem checkbox og knappen -->
    <div class="flex items-center w-full">
        <input type="checkbox" id="nyhedsbrev2" name="nyhedsbrev2"
            class="h-4 w-4 text-customPink border-customGray focus:ring-customPink">
        <label for="nyhedsbrev2" class="ml-2 text-sm text-white relative inline-block w-full">
            Tilmeld nyhedsbrev
            <span class="absolute left-0 bottom-0 w-full" style="height: 1px; background-color: #E7639B; box-sizing: border-box;"></span>
        </label>
    </div>
</div>

<!-- Submit knap -->
<div class="text-center" style="margin-top: 4rem;"> <!-- Inline margin-top for ekstra afstand -->
    <button type="submit" class="inline-block px-10 py-3 bg-customPink text-customBlue font-bold text-sm uppercase shadow-white-glow hover:bg-customGray transform transition-transform duration-300 hover:scale-110">Registrér</button>
</div>

<!-- Billede centrering med afstand -->
<div class="flex justify-center items-center mt-12" style="margin-top: 4rem;" > <!-- Juster margin-top som ønsket -->
    <img src="/src/assets/images/letsdoit_logo.png" alt="Lets do it" class="w-[25%]">
</div>
</form>

<footer>
    <Footer></Footer>
</footer>